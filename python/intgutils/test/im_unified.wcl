<files>
  <split_ccd>
    ccd=1
    filename=decam-sispi-00022719_${ccd:2}.fits
  </split_ccd>
  <biased>
     filename = ${input.split_ccd.filename:trim}_bias.fits
  </biased>
</files>
<wrapper>
  caldir = /blue-ccd-data/mengel_work/cal
</wrapper>
<exec_1>
  parents = files.split_ccd
  children = files.biased
  command = imcorrect
  cmdargs = applybias_in.list
  cmdflags = overscan,MEF
  <cmdopts>
    output = applibias_out.list
    bias = /blue-ccd-data/mengel_work/cal/biascor_${input.split_ccd.ccd:2}.fits 
    photflattens = /blue-ccd-data/mengel_work/cal/photflatcor_${input.split_ccd.ccd:2}.fits 
    flatten = ${config.caldir}/flatcor_${input.split_ccd.ccd:2}.fits 
    bpm = ${config.caldir}/bpm_${input.split_ccd.ccd:2}.fits 
    pupil = ${config.caldir}/pupil_${input.split_ccd.ccd:2}.fits 
    variancetype = WEIGHT
    interpolate_col = 2.0
    updatekeyword = SKYBRITE
    verbose = 3 
  </cmdopts>
</config>
